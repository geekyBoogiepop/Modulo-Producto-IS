@model Modulo_Producto.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
    var productList = ViewBag.ProductList;
}

<h1 class="text-center"><span class="highlight">Eliminar Venta</span></h1>

<div class="alert alert-danger mt-3">
    <h3>¿Está seguro que desea eliminar esta venta?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdProducto)
        </dt>
        <dd class="col-sm-10">
            @foreach (var product in productList)
            {
                if (product.Id == Model.IdProducto)
                {
                    <span>@product.Descripcion</span>
                }
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-warning" asp-action="Index">Regresar</a>
    </form>
</div>
