@model Modulo_Producto.Models.Venta

@{
    ViewData["Title"] = "Detalles de la Venta";
    var productList = ViewBag.ProductList;
}

<h1 class="text-center"><span class="highlight">Detalles de la Venta</span></h1>

<div>
    <dl class="row alert-info mt-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Caja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Caja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdProducto)
        </dt>
        <dd class="col-sm-10">
            @foreach (var product in productList)
            {
                if (product.Id == Model.IdProducto)
                {
                    <span>@product.Descripcion</span>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-warning" asp-action="Index">Regresar</a>
</div>
